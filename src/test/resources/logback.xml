<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--  Root  -->
    <root level="error" additivity="false">
        <appender-ref ref="STDOUT" />
    </root>

    <!--  Loggers -->
    <logger name="org.apache" level="error">
    </logger>
    <logger name="org.opensextant.extractors" level="info">
    </logger>
    <logger name="org.opensextant.extractors.geo" level="info">
    </logger>
    <logger name="org.opensextant.extractors.xtax" level="info">
    </logger>
    <logger name="org.opensextant.extractors.xtemporal" level="info">
    </logger>
    <logger name="org.opensextant.extractors.xcoord" level="info">
    </logger>
    <logger name="org.opensextant.extractors.poli" level="info">
    </logger>
    <!-- disable rules logging once you are comfortable things are working -->
    <logger name="org.opensextant.extractors.geo.rules" level="debug">
    </logger>
    <logger name="org.opensextant.extractors.geo.rules.HeatMapRule" level="info">
    </logger>
    <logger name="org.opensextant.extractors.geo.rules.MajorPlaceRule" level="info">
    </logger>
    <logger name="org.opensextant.xlayer" level="info">
    </logger>

</configuration>
